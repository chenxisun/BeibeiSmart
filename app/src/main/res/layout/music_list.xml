<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/u0">

    <Button
        android:id="@+id/back_btn_music_list"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/back_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="200dp">


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginRight="32dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/all_music"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:clickable="true"
                android:src="@drawable/u38" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="中文儿歌"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="32dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/english_music"
                android:layout_width="match_parent"

                android:layout_height="200dp"
                android:background="@drawable/u44"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="英文儿歌"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="32dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/soft_music"
                android:layout_width="match_parent"

                android:layout_height="200dp"
                android:background="@drawable/soft_album"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="轻音乐"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"

            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/love_music"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/love_album"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="我的收藏"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>