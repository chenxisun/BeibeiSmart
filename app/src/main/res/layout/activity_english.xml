<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/u0"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2">
    <Button
        android:id="@+id/back_btn_English"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/back_btn" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">
            <ImageView
                android:id="@+id/danciLearn"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/catalog_words_128"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="单词学习"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">
            <ImageView
                android:id="@+id/yinbiaoLearn"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:background="@drawable/ipa_15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="音标学习"
                android:gravity="center"
                android:paddingTop="20dp"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp">
            <ImageView
                android:id="@+id/kebenLearn"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/english3a"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="课本学习"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textSize="30sp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

</LinearLayout>