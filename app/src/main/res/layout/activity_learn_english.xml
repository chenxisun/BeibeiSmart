<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LearnEnglishActivity">

    <Button
        android:id="@+id/btn_learn_english_return"
        android:layout_width="@dimen/btn_width_128"
        android:layout_height="@dimen/btn_height_81"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/return_white_128"
        />

    <GridView
        android:id="@+id/gv_catalog"
        android:layout_below="@id/btn_learn_english_return"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:horizontalSpacing="1dp"
        android:numColumns="5"/>
</RelativeLayout>